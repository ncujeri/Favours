

@(Html.DevExtreme().DataGrid<LaxFavours.Models.Dtos.CustomerAddress>()
    .DataSource(ds => ds.WebApi()
        .RouteName("CustomerAddressesApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.ID);

        columns.AddFor(m => m.customer_details_id);

        columns.AddFor(m => m.address_type);

        columns.AddFor(m => m.value);

        columns.AddFor(m => m.state);

        columns.AddFor(m => m.created_at);

        columns.AddFor(m => m.updated_at);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)